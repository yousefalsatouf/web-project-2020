{% extends 'base.html.twig' %}

{% block title %}{{ register_title }}{% endblock %}
{% block stylesheets %}
    {{ encore_entry_link_tags('register') }}
{% endblock %}
{% block body %}
    <div id="register" class="page-wrapper">
        {% block header %}
            {% include 'helpers/_header.html.twig' %}
        {% endblock %}
        <div class="container">
            <form method="post">
                <b>Hey Stranger,</b><small>Let's know you !</small>
                <h1 class="h3 mb-3 ">Please Sign Up :</h1>

                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.roles) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.confirmPassword) }}
                {% if confirmationError %}
                    <small class="alert-danger">{{ confirmationError }}</small>
                {% endif %}
                {{ form_row(registrationForm.agreeTerms) }}

                <button class="btn btn-lg btn-primary col-lg-5" >Register</button>
                {{ form_end(registrationForm) }}
            </form>
        </div>
        {% block footer %}
            {% include 'helpers/_footer.html.twig' %}
        {% endblock %}
    </div>
{% endblock %}
